<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="263.0" prefWidth="377.0" style="-fx-background-color: #003465;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HorariosController">
    <children>
        <!-- Póster y Título a la Izquierda -->
        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="6.0" prefHeight="250.0" prefWidth="357.0" spacing="20" style="-fx-background-color: #D9D9D9; -fx-border-color: #D4D100;" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="6.0">
            <children>
                <VBox spacing="10">
                    <ImageView fx:id="Imagen_Peli" fitHeight="200.0" fitWidth="150.0" />
                    <Label fx:id="TituloPeli" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                </VBox>

                <!-- Hora actual y horarios -->
                <VBox spacing="20" style="-fx-background-color: white;">
                    <Label fx:id="horaActual" style="-fx-font-size: 16px;" />
                    <VBox spacing="10">
                        <Button fx:id="btm_h1" onAction="#horaPeli1" prefWidth="150" text="Horario 1" />
                        <Button fx:id="btm_h2" onAction="#horaPeli2" prefWidth="150" text="Horario 2" />
                        <Button fx:id="btm_h3" onAction="#horaPeli3" prefWidth="150" text="Horario 3" />
                    </VBox>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
